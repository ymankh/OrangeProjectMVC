<section class="section-advertisement ad-3 bg-custom-light pt-60 pt-lg-100 pt-xxl-120 pb-40 pb-lg-80 pb-xxl-100 rtl">
    <a href="@Url.Action("advertismentst", "UserCycle")" class="btn btn-primary">إعلانات المرشحين</a>
    <div class="container formcontainer">
        <h2 class="mb-30 mb-lg-40 text-lg-center wow fadeInUp" style="font-family:cairo;">إنشاء إعلانك الانتخابي</h2>
        @using (Html.BeginForm("Create", "Adv", FormMethod.Post, new { id = "advertisementForm", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="Price" value="@ViewBag.Price" />

            <div class="col-12">
                <label for="InputImage" class="form-label">صورة الإعلان</label>
                <input type="file" class="form-control" id="InputImage" name="ImageFile" required="">
            </div>
            <div class="col-12">
                <label for="InputDescription" class="form-label">وصف الإعلان</label>
                <textarea class="form-control" id="InputDescription" name="description" rows="6" required=""></textarea>
            </div>
            <div class="col-12">
                <button style="font-family:cairo; margin-top:10px;" type="submit" class="btn btn-primary">أرسل الإعلان</button>
            </div>
            <div class="response py-1"></div>
        }




    </div>
</section>



