@model OrangeProjectMVC.Models.ContactUsViewModel

@{
    ViewBag.Title = "تواصل معنا";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<style>
    .rtl {
        direction: rtl;
        text-align: right;
    }

        .rtl label {
            text-align: right;
        }

        .rtl .form-control {
            text-align: right;
        }
  
</style>

<!--Contact Section ======================-->
<section class="section-contact contact-3 pt-60 pt-lg-100 pt-xxl-120 pb-40">
    <div class="container formcontainer">
        <div class="contact-form-wrapper bg-custom-light p-4 p-lg-40 rtl">
            <h2 class="mb-30 mb-lg-40 text-lg-center wow fadeInUp" style="font-family:cairo;">تواصل معنا</h2>

            @using (Html.BeginForm("contactus", "contactus", FormMethod.Post, new { id = "contactForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="col mb-3">
                    <label for="InputName" class="form-label">الاسم</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "InputName", required = "required" })
                </div>
                <div class="col mb-3">
                    <label for="InputEmail" class="form-label">البريد الإلكتروني</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "InputEmail", type = "email", required = "required" })
                </div>
                <div class="col mb-3">
                    <label for="InputSubject" class="form-label">الموضوع</label>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @id = "InputSubject" })
                </div>
                <div class="col-12 mb-3">
                    <label for="InputMessage" class="form-label">الرسالة</label>
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @id = "InputMessage", rows = "3" })
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" style="font-family:cairo; margin-top:5px;">إرسال الآن</button>
                </div>
                <div class="response py-1"></div>
            }
        </div>
    </div>
</section>
