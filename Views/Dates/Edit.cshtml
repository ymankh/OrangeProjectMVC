@model OrangeProjectMVC.Models.Date

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Election Dates and Deadlines</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <fieldset>
            <legend>Nomination Period</legend>
            <div class="form-group">
                <label class="control-label col-md-2">Nomination Start Date</label>
                <div class="col-md-10">
                    <input type="datetime-local"
                           class="form-control"
                           name="nomination_start_date"
                           value="@Model.nomination_start_date.ToString("yyyy-MM-ddTHH:mm")" />
                    @Html.ValidationMessageFor(model => model.nomination_start_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nomination End Date</label>
                <div class="col-md-10">
                    <input type="datetime-local"
                           class="form-control"
                           name="nomination_end_date"
                           value="@Model.nomination_end_date.ToString("yyyy-MM-ddTHH:mm")" />
                    @Html.ValidationMessageFor(model => model.nomination_end_date, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>Election Period</legend>
            <div class="form-group">
                <label class="control-label col-md-2">Election Start Date</label>
                <div class="col-md-10">
                    <input type="datetime-local"
                           class="form-control"
                           name="election_start_date"
                           value="@Model.election_start_date.ToString("yyyy-MM-ddTHH:mm")" />
                    @Html.ValidationMessageFor(model => model.election_start_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Election End Date</label>
                <div class="col-md-10">
                    <input type="datetime-local"
                           class="form-control"
                           name="election_end_date"
                           value="@Model.election_end_date.ToString("yyyy-MM-ddTHH:mm")" />
                    @Html.ValidationMessageFor(model => model.election_end_date, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>Results</legend>
            <div class="form-group">
                <label class="control-label col-md-2">Results Date</label>
                <div class="col-md-10">
                    <input type="datetime-local"
                           class="form-control"
                           name="results_date"
                           value="@Model.results_date.ToString("yyyy-MM-ddTHH:mm")" />
                    @Html.ValidationMessageFor(model => model.results_date, "", new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
