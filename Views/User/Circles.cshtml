@model OrangeProjectMVC.Models.voter_user

@{
    ViewBag.Title = "Circles";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    var x = Session["c"].ToString();
}

<style>
    body {
        background-color: #F4F4F4;
    }
</style>

<h2 style="text-align: center; margin-top: 1em; font-family: cairo;">دائرتك</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Dynamic Card for User Circle, centered at the top -->
        <div class="col-md-4 my-2">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <img src="~/img/@x" class="card-img-top" alt="Ajloun">
                <div class="card-body text-center">
                    <h5 class="card-title" style="font-family: cairo;">@ViewBag.Circle</h5>
                    <p class="card-text" style="font-family: cairo;">أنت تتبع لدائرة @ViewBag.Circle</p>
                    <p class="card-text" style="font-family: cairo;">اضغط استمرار للانتقال الى القوائم.</p>
                    @Html.ActionLink("استمرار", "ListsType", "User", new { area = "" }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>

    <h2 id="toggleCards" style="text-align: center; margin:1em 0 1em 0; font-family: cairo; cursor: pointer;">بقية دوائر المملكة</h2>

