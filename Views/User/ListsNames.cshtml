@model IEnumerable<OrangeProjectMVC.Models.election_list>
@{
    ViewBag.Title = "ListsNames";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align: center; font-family: cairo; margin-top: 1em;">ListsNames</h2>

<div class="container mt-5">
    <h1 style="text-align: center; font-family: cairo;">الرجاء اختيار القائمة المراد التصويت لها</h1>

    @using (Html.BeginForm("SingleList", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row justify-content-center">
            @foreach (var lists in Model)
            {
                <div class="col-md-3 my-2">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <img src="~/img/petra.png" class="card-img-top" alt="Card image for @Html.DisplayFor(model => lists.name)">
                        <div class="card-body text-center">
                            <h5 class="card-title" style="font-family: cairo;">@Html.DisplayFor(model => lists.name)</h5>
                            <p class="card-text" style="font-family: cairo;">Description for @Html.DisplayFor(model => lists.name).</p>
                            <ul class="list-unstyled" style="font-family: cairo;">
                                @foreach (var c in lists.candidates)
                                {
                                    <li>@c.voter_user.name</li>
                                }
                            </ul>
                            <div style="text-align: center;">
                                <input class="custom-radio" type="radio" name="election_list_id" value="@lists.id" style="transform: scale(1.5); margin-top: 0.5em;" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn" style="background-color: red; margin-left:0.5em; color: white;">صوت الان</button>
            @Html.ActionLink("رجوع", "Index", "Home", new { area = "" }, new { @class = "btn", style = "background-color: black; color: white;" })
        </div>
    }
</div>
