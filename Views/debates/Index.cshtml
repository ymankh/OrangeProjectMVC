@model IEnumerable<OrangeProjectMVC.Models.debate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Debates List</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.requested_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.topic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zoom_link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.details)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.debate_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.election_list.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.election_list1.name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.requested_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.topic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zoom_link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.details)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.debate_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.election_list.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.election_list1.name)
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-secondary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
