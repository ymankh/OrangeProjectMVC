@model IEnumerable<OrangeProjectMVC.Models.election_list_request>

@{
    ViewBag.Title = "Index";
}

<h2>Election List Request</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card shadow mb-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.image_url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.district.name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>

                        @if (!string.IsNullOrEmpty(item.image_url))
                        {
                            <td>
                                <img width="100" src="@Url.Content(item.image_url)" alt="Image" />
                            </td>
                        }
                        else
                        {
                            <td>
                                No image available
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.district.name)
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-secondary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
