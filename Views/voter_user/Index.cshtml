@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var paginationLinks = document.querySelectorAll('#pagination .page-link');
            paginationLinks.forEach(function (link, index) {
                if (link.getAttribute('href') !== '#') {
                    var url = new URL(window.location.href);
                    url.searchParams.set('page', index); // Set the page number
                    link.setAttribute('href', url.toString());
                }
            });

            // Handle the previous and next links
            var prevLink = document.querySelector('#pagination [aria-label="Previous"]');
            var nextLink = document.querySelector('#pagination [aria-label="Next"]');
            var currentPage = parseInt(new URL(window.location.href).searchParams.get('page')) || 1;
            console.log(currentPage);

            if (prevLink) {
                var prevPage = currentPage > 1 ? currentPage - 1 : 1;
                var prevUrl = new URL(window.location.href);
                prevUrl.searchParams.set('page', prevPage);
                prevLink.setAttribute('href', prevUrl.toString());
                prevLink.parentElement.classList.toggle('disabled', currentPage === 1);
            }

            if (nextLink) {
                var nextPage = currentPage + 1;
                var nextUrl = new URL(window.location.href);
                nextUrl.searchParams.set('page', nextPage);
                nextLink.setAttribute('href', nextUrl.toString());
            }
        });
    </script>

}
